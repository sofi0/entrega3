                        </div>

                        <h3>Registrar en un curso</h3>

                        <div class="form-group">
                          <label for="state_id" class="control-label">curso</label>
                                  <select class="form-control" name="idCurso">
                                        {{#each cursosDisponibles}}
                                            <option value='{{this._id}}'>{{this.nombre}}</option>
                                        {{/each}}
                                  </select>  
                        </div>

                        <div class="form-group"> 
                                <label for="state_id" class="control-label" >Modalidad</label>
